<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>
    <!-- Stylesheet -->
    <link rel="stylesheet" href="/pets-r-us/public/styles/site1.css" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&display=swap" rel="stylesheet" />
</head>

<body>

    <!--Calls the header (navbar) file-->
    <%- include('partials/_header.ejs') %>


        <div class="content">
            <h1>Customer List</h1>
            <p>
                Below is a list of all registered customers and their emails.
            </p>
            <% if(customer.length > 0) { %>
                <table class="table">
                    <tr>
                        <th>Customer ID</th>
                        <th>Email</th>
                    </tr>
                    <tbody>
                        <% customer.forEach(function(customer) { %>
                            <tr>
                                <td>
                                    <%= customer.customerId %>
                                </td>
                                <td>
                                    <%= customer.email %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                    <h3>Zero customers have been added to the MongoDB customer database. </h3>
                    <% } %>




        </div>

        <!--Calls the footer file-->
        <%- include('partials/_footer.ejs') %>


</body>

</html>


</body>

